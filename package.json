{
  "name": "safeguard",
  "version": "1.0.0",
  "description": "AI-Powered Violence Reporting Platform",
  "main": "index.js",
  "scripts": {
    "start": "node server/run-dev.js",
    "server": "node server/run-dev.js",
    "client": "cd client && npm start",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm install && npm run install-server && npm run install-client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "violence",
    "reporting",
    "ai",
    "safeguard"
  ],
  "author": "Hack4Bengal Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.0.1"
  }
} 